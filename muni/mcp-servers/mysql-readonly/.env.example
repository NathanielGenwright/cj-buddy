# MCP MySQL Server Environment Configuration
# Copy this file to .env and fill in your actual values

# Development Database Configuration
MYSQL_DEV_HOST=localhost
MYSQL_DEV_PORT=3307
MYSQL_DEV_DATABASE=your_dev_database_name
MYSQL_DEV_USER=your_dev_user
MYSQL_DEV_PASSWORD=your_dev_password

# Test Database Configuration  
MYSQL_TEST_HOST=localhost
MYSQL_TEST_PORT=3308
MYSQL_TEST_DATABASE=billingdbtest
MYSQL_TEST_USER=your_test_user
MYSQL_TEST_PASSWORD=your_test_password

# MCP Server Configuration
MCP_SERVER_PORT=3333
MCP_SERVER_HOST=localhost
MCP_MAX_CONNECTIONS=10
MCP_QUERY_TIMEOUT=30000
MCP_READ_ONLY=true
MCP_SSL_MODE=preferred

# Security Settings
MCP_ALLOWED_SCHEMAS=*
MCP_MAX_QUERY_LENGTH=10000
MCP_ENABLE_LOGGING=true
MCP_LOG_QUERIES=true
MCP_LOG_LEVEL=info

# Performance Settings
MCP_CONNECTION_POOL_MIN=2
MCP_CONNECTION_POOL_MAX=10
MCP_CONNECTION_POOL_IDLE_TIMEOUT=30000
MCP_QUERY_CACHE_ENABLED=true
MCP_QUERY_CACHE_TTL=300000

# Development Settings (set to false in production)
MUNIDEV_UNIVERSAL_PASSWORD=test
MUNIDEV_FORCE_CACHING=true

# Optional: Remote MCP Configuration
# IS_REMOTE_MCP=false
# REMOTE_SECRET_KEY=your_secure_secret_key_here
# REMOTE_MCP_PORT=3000